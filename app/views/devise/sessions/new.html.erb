<div class="user-field">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user-new-form" }) do |f| %>
  <div class="field user-new-form-divs">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: "user-new-form-inputs" %>
  </div>
  <div class="field user-new-form-divs">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "user-new-form-inputs" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions user-new-form-divs">
    <%= f.submit "Log in", class: "user-new-form-inputs" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>