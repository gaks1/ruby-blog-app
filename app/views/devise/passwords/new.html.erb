<h2 class="user-new-reg-h1">Forgot your password?</h2>
<div class="user-field">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "user-new-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field user-new-form-divs">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",  class: "user-new-form-inputs" %>
  </div>
  <div class="actions user-new-form-divs">
    <%= f.submit "Send me reset password instructions", class: "user-new-form-inputs" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>