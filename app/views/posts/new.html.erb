<h1>New post</h1>
<%= form_with model: @post, url: user_posts_path(user_id: @user.id) do |form| %>
    <div class="user-form">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :text %>
    <%= form.text_area :text %>
    <%= form.submit "Create post", class:"pst-btn" %>
    </div>
<% end %>

