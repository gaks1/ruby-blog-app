<% @users.each do |user| %>
    <%= link_to user_path(id:user.id) do %>
    <div class="user-index">
    <img src="<%= user.photo %>" alt="user photo">
    <div class="usr-inx-div">
    <h1><%= user.name %></h1>
    <p>Number of posts: <%= user.post_counter %> </p>
    </div>
    </div>
    <% end %>
<% end %>